@{
    ViewBag.Title = "Enter New Password";
}

<div class="container">
    <div class="row enterNew-row">
        <!-- Article main content -->
        <article class="col-xs-12 maincontent">

            <header class="page-header">
                <h1 class="page-title" id="HeaderText">Enter New Password</h1>
            </header>

            <div class="row">
                <div class="col-sm-12">
                    <h4 id="LargeText">
                        To confirm your identity, kindly enter your registered Email-Id.
                    </h4>
                    <h4>
                        <input type="hidden" id="token" value="@Html.Raw((Session["token"]))" />
                    </h4>
                </div>
            </div>

            <div class="row" id="confirmIdentity" >
                <form>
                    <div class="col-sm-8">
                        <div class="top-margin"></div>
                        <input type="email" class="form-control" id="RegisteredEmail" required="required" maxlength="50"
                               placeholder="Enter registered Email-Id" />
                        <div id="EmailOutputDiv"></div>
                    </div>
                    <div class="col-sm-4">
                        <div class="top-margin"></div>
                        <input type="submit" value="Confirm" id="ConfirmBtn" class="btn btn-info" />
                    </div>
                </form>
            </div>

            <div>
                <div id="popover-password-content" class="hidden">
                    <div>
                        1. Must be of atleast 8 characters <br />
                        2. Max 30 characters are allowed <br />
                        3. It may contain characters or digits or special characters
                    </div>
                </div>

                <div id="popover-password-title" class="hidden">
                    <b>Password must follow these</b>
                </div>
            </div>

            <div>
                <div id="popover-passwordConfirm-content" class="hidden">
                    <div>
                        Please verify that both the password match.
                    </div>
                </div>

                <div id="popover-passwordConfirm-title" class="hidden">
                    <b>Password must match</b>
                </div>
            </div>
            
            @using (Html.BeginForm("finalresetpassword", "NonAccount", FormMethod.Get))
            {
                @Html.AntiForgeryToken()
                <div class="row hidden" id="enterNewPassword-row">
                    <form>
                        <div class="col-sm-12">
                            <div class="top-margin"></div>
                            <input type="password" name="stringValue" class="form-control" 
                                   data-placement="auto top" data-trigger="manual" id="Password"
                                   maxlength="30" required="required" placeholder="Enter New Password"/>
                            <div class="top-margin"></div>
                            <input type="password" class="form-control" data-placement="auto bottom" 
                                   data-trigger="manual" id="confirmPassword"
                                   maxlength="30" required="required" placeholder="Confirm New Password"/>
                        </div>
                        <div class="col-sm-12">
                            <div class="top-margin"></div>
                            <input type="submit" class="btn btn-action" id="ResetBtn" value="Reset"/>
                            <input type="submit" class="hidden" id="resetBtnServer" onclick="this.form.submit();" />
                        </div>
                    </form>
                </div>
            }

            <div id="FinalOutputDiv"></div>

        </article>
        <!-- /Article -->
    </div>
</div>	<!-- /container -->
@Scripts.Render("~/bundles/NonAccount/EnterNewPassword")