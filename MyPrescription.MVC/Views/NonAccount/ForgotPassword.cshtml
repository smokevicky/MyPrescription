
@{
    ViewBag.Title = "Forgot Password";
}

<div class="container">
    <div class="row forgot-row">
        <!-- Article main content -->
        <article class="col-xs-12 maincontent">

            <header class="page-header">
                <h1 class="page-title">Forgot your password ???</h1>
            </header>

            <div class="col-sm-12">
                <form>
                    <h4 id="LargeDiv">
                        Don't worry.<br />Enter your registered Email-Id to recover your password.
                    </h4>
                    <div class="top-margin"></div>
                    <p>
                        <input type="email" class="form-control" id="ForgotEmail" required="required" />
                        <div id="OutputDiv"></div>
                    </p>
                    <p>
                        <input type="submit" value="Recover" id="RecoverBtn" class="btn btn-action" />
                    </p>
                </form>
            </div>

        </article>
        <!-- /Article -->
    </div>
</div>	<!-- /container -->
@Scripts.Render("~/bundles/NonAccount/ForgotPassword")
